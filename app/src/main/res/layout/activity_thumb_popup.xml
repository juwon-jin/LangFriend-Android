<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/LL_popup_thumb"
    android:gravity="center">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorGrayLine" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/BT_choose_a_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="앨범에서 선택"
            android:background="@null"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorGrayLine" />
    <RelativeLayout
        android:id="@+id/RR_take_from_facebook"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/BT_take_from_facebook"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="페이스북 프로필에서 가져오기"
            android:background="@null"/>
    </RelativeLayout>
    <View
        android:id="@+id/V_take_from_facebook_line"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorGrayLine" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/BT_close_up_a_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="확대해서 보기"
            android:background="@null"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorGrayLine" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/BT_remove_a_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="삭제하기"
            android:background="@null"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorGrayLine" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/BT_close"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="취소"
            android:background="@null"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/colorGrayLine" />
</LinearLayout>
