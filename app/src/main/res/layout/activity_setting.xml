<?xml version="1.0" encoding="UTF-8"?>
<android.support.design.widget.CoordinatorLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aigestudio="http://schemas.android.com/tools">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay" >

        <include layout="@layout/toolbar_setting" android:id="@+id/cs_toolbar" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#EEEEEE">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="매칭 설정"
                        android:gravity="bottom"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LL_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="성별"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="12dp"
                            android:textStyle="bold"/>
                        <CheckBox
                            android:id="@+id/checkBox_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="여성"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="30dp"/>
                        <CheckBox
                            android:id="@+id/checkBox_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="남성"
                            android:layout_marginLeft="230dp"
                            android:layout_marginTop="30dp" />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#EFEEEE" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="최대 거리"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="12dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/TV_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_alignParentRight="true"
                            android:textColor="#AAAAAA"/>
                        <com.crystal.crystalrangeseekbar.widgets.CrystalSeekbar
                            android:id="@+id/SB_distance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            app:corner_radius="10"
                            app:min_value="0"
                            app:max_value="200"
                            app:steps="1"
                            app:bar_color="#AAAAAA"
                            app:bar_highlight_color="#D80027"
                            app:left_thumb_image="@drawable/circle"
                            app:right_thumb_image="@drawable/circle"
                            app:left_thumb_image_pressed="@drawable/circle"
                            app:right_thumb_image_pressed="@drawable/circle"
                            app:data_type="_integer"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#EFEEEE" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="나이"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="12dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/TV_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_alignParentRight="true"
                            android:textColor="#AAAAAA"/>
                        <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                            android:id="@+id/SB_age"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            app:corner_radius="10"
                            app:min_value="0"
                            app:max_value="100"
                            app:steps="1"
                            app:bar_color="#AAAAAA"
                            app:bar_highlight_color="#D80027"
                            app:min_start_value="0"
                            app:max_start_value="100"
                            app:left_thumb_image="@drawable/circle"
                            app:right_thumb_image="@drawable/circle"
                            app:left_thumb_image_pressed="@drawable/circle"
                            app:right_thumb_image_pressed="@drawable/circle"
                            app:data_type="_integer"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#EFEEEE" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="언어"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="12dp"
                            android:textStyle="bold"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:gravity="center"
                            android:padding="10dp">

                            <LinearLayout
                                android:id="@+id/LL_wheelpicker"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical">
                                <com.zhy.view.flowlayout.TagFlowLayout
                                    android:id="@+id/TFL_language"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="0dp">
                                </com.zhy.view.flowlayout.TagFlowLayout>
                                <LinearLayout
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:aigestudio="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:background="#FFFFFF"
                                    android:orientation="horizontal">
                                    <com.aigestudio.wheelpicker.WheelPicker
                                        android:id="@+id/wheelPicker"
                                        android:layout_width="200dp"
                                        android:layout_height="wrap_content"
                                        android:background="#E5DEEB"
                                        aigestudio:wheel_atmospheric="true"
                                        aigestudio:wheel_curved="true"
                                        aigestudio:wheel_cyclic="false"
                                        aigestudio:wheel_item_align="center"
                                        aigestudio:wheel_item_text_color="#A7A7DB"
                                        aigestudio:wheel_item_text_size="20sp"
                                        aigestudio:wheel_selected_item_text_color="#536D8A"
                                        aigestudio:wheel_item_space="20dp"/>
                                    <com.aigestudio.wheelpicker.WheelPicker
                                        android:id="@+id/wheelPicker_level"
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"
                                        android:background="#E5DEEB"
                                        aigestudio:wheel_atmospheric="true"
                                        aigestudio:wheel_curved="true"
                                        aigestudio:wheel_cyclic="false"
                                        aigestudio:wheel_item_align="center"
                                        aigestudio:wheel_item_text_color="#A7A7DB"
                                        aigestudio:wheel_item_text_size="20sp"
                                        aigestudio:wheel_selected_item_text_color="#536D8A"
                                        aigestudio:wheel_item_space="20dp"/>
                                </LinearLayout>
                            </LinearLayout>
                            <Button
                                android:id="@+id/BT_add"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@id/LL_wheelpicker"
                                android:text="추가"
                                android:textSize="12dp"
                                android:background="@drawable/category_btn"
                                android:textColor="#AAAAAA"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#EFEEEE" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="국적"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="12dp"
                            android:textStyle="bold"/>
                        <RelativeLayout
                            android:id="@+id/RL_country"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:gravity="center"
                            android:padding="10dp">

                            <LinearLayout
                                android:id="@+id/LL_wheelpicker2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical">
                                <com.zhy.view.flowlayout.TagFlowLayout
                                    android:id="@+id/TFL_country"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="0dp">
                                </com.zhy.view.flowlayout.TagFlowLayout>
                                <LinearLayout
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:aigestudio="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:background="#FFFFFF"
                                    android:orientation="horizontal">
                                    <com.aigestudio.wheelpicker.WheelPicker
                                        android:id="@+id/wheelPicker2"
                                        android:layout_width="300dp"
                                        android:layout_height="wrap_content"
                                        android:background="#E5DEEB"
                                        aigestudio:wheel_atmospheric="true"
                                        aigestudio:wheel_curved="true"
                                        aigestudio:wheel_cyclic="false"
                                        aigestudio:wheel_item_align="center"
                                        aigestudio:wheel_item_text_color="#A7A7DB"
                                        aigestudio:wheel_item_text_size="20sp"
                                        aigestudio:wheel_selected_item_text_color="#536D8A"
                                        aigestudio:wheel_item_space="20dp"/>
                                </LinearLayout>
                            </LinearLayout>
                            <Button
                                android:id="@+id/BT_add2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@id/LL_wheelpicker2"
                                android:text="추가"
                                android:textSize="12dp"
                                android:background="@drawable/category_btn"
                                android:textColor="#AAAAAA"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@id/RL_country">
                            <CheckBox
                                android:id="@+id/checkBox_sameCountry"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="60dp"
                                android:text="같은 국적의 사람에게 노출되기를 원하지않나요?"
                                android:gravity="center_vertical"
                                android:textColor="#000000"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="일반 설정"
                        android:gravity="bottom"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorWhite">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/BT_push_setting"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="푸쉬 설정"
                            android:textSize="20dp"
                            android:gravity="left|center_vertical"
                            android:background="@color/colorWhite"
                            android:padding="20dp"/>

                        <Switch
                            android:id="@+id/push_switch"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            android:layout_marginRight="20dp"
                            android:background="@color/colorWhite"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#EFEEEE" />
                    <Button
                        android:id="@+id/BT_agreement"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="이용 약관"
                        android:textSize="20dp"
                        android:gravity="left|center_vertical"
                        android:background="@color/colorWhite"
                        android:padding="20dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#EFEEEE" />
                    <Button
                        android:id="@+id/BT_privacy_rule"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="개인정보 취급방침"
                        android:textSize="20dp"
                        android:gravity="left|center_vertical"
                        android:background="@color/colorWhite"
                        android:padding="20dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#EFEEEE" />
                    <Button
                        android:id="@+id/BT_logout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="로그아웃"
                        android:textSize="20dp"
                        android:gravity="left|center_vertical"
                        android:background="@color/colorWhite"
                        android:padding="20dp"/>
                    <!--<Button-->
                        <!--android:id="@+id/BT_withdrawal"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:text="회원 탈퇴"-->
                        <!--android:textSize="20dp"-->
                        <!--android:gravity="left|center_vertical"-->
                        <!--android:background="@color/colorWhite"-->
                        <!--android:padding="20dp"/>-->
                </LinearLayout>
            </LinearLayout>



        </ScrollView>
    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>