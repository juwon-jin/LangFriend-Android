<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <TextView
            android:id="@+id/TV_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="'좋아요' 모두 사용 완료"
            android:padding="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/TV_finish_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음 '좋아요'까지 남은 시간 :"
            android:padding="5dp"
            android:textSize="20dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/TV_finish_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="20dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/BT_yes"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="확인"
            android:background="@drawable/category_btn"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/BT_push"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="좋아요 가능할 때를 알림으로 받고싶다면 클릭!"
            android:background="@null"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:textSize="10dp"
            android:visibility="gone"/>
</LinearLayout>
