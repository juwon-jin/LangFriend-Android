<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:aigestudio="http://schemas.android.com/apk/res-auto"
    tools:context="makejin.langfriend.juwon.Signup.Signup7AboutMeFragment">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout">
        
        <include layout="@layout/toolbar_default" android:id="@+id/cs_toolbar" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/RL_BT_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp">
        <Button
            android:id="@+id/BT_yes"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#CC3333"
            android:text="완료"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/RL_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:paddingBottom="-20dp"
        android:layout_below="@+id/appBarLayout"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="미프에서 어떤 친구를 만나고 싶은지, 나의 관심사는 무엇인지 적어보세요!"
            android:textSize="17dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="130dp"
        android:layout_marginBottom="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <EditText
            android:id="@+id/ET_about_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="150dp"
            android:background="#AAAAAA"
            android:hint="예) 언어교환, 여행/영화/맛집 등"
            android:gravity="start"
            android:padding="10dp"/>

    </RelativeLayout>



    <include layout="@layout/view_loading_indicator" android:id="@+id/indicator"/>

</RelativeLayout>
